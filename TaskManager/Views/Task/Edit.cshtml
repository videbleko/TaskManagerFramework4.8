@model TaskManager.Models.Tasks
@{
	ViewBag.Title = "Editar";
}

<h3>Editar tarea.</h3>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	<div></div>
	<div class="form-group">
		@Html.LabelFor(model => model.Descripcion)
		@Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control" })
		@Html.ValidationMessageFor(model => model.Descripcion)
	</div>
	<br />
	<div class="form-group">

		@Html.LabelFor(model => model.Estado, new { @class = "form-label" })
		@Html.DropDownListFor(model => model.Estado, Model.ListaDeEstados, new { @class = "form-control", placeholder = "Estado" })
		@Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
	</div>
	<br />
	<div class="form-group">
		@Html.LabelFor(model => model.Prioridad, new { @class = "form-label" })
		@Html.DropDownListFor(model => model.Prioridad, Model.ListaDePrioridades, new { @class = "form-control", placeholder = "Prioridad" })
		@Html.ValidationMessageFor(model => model.Prioridad, "", new { @class = "text-danger" })
	</div>
	<br />
	<br />
	@Html.ActionLink("Ir al inicio", "Index", null, new { @class = "btn btn-secondary" })
	<button type="submit" class="btn btn-primary">Guardar</button>
}




